<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PharmacyApp.Views.LoginPage">

    <StackLayout>
        <Label Text="Логин:"/>
        <Entry Text="{Binding Path=Login}" Keyboard="Default" Placeholder="Введите ваш логин"/>
        <Label Text="Пароль:"/>
        <Entry Text="{Binding Path=Password}" Keyboard="Default" Placeholder="Введите ваш пароль" IsPassword="True"/>
        <Button Command="{Binding EnterCommand}" Text="Войти" TextColor="White" BackgroundColor="#81C784" BorderRadius="1000" BorderColor="White" />
    </StackLayout>

  </ContentPage>